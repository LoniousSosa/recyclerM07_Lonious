<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:rowCount="4"
    android:columnCount="3"
    android:orientation="horizontal"
    tools:context=".GridLayoutLonious">

    <TextView
        android:textAlignment="center"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="10dp"
        android:layout_columnSpan="3"
        android:id="@+id/titleGrid"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GRID LAYOUT"
        android:textSize="50dp" />

    <ImageButton
        android:layout_marginTop="45dp"
        android:layout_columnSpan="1"
        android:id="@+id/gokuKanye"
        android:scaleType="fitCenter"
        android:backgroundTint="@color/white"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@mipmap/goku"/>
    <TextView
        android:layout_gravity="center"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="10dp"
        android:layout_columnSpan="2"
        android:id="@+id/gridGoku"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="60dp"
        android:text="GokuS18"
        android:textSize="40dp" />

    <ImageButton
        android:id="@+id/imageView2"
        android:layout_marginTop="10dp"
        android:layout_width="200dp"
        android:scaleType="fitCenter"
        android:backgroundTint="@color/white"
        android:layout_height="200dp"
        android:layout_columnSpan="1"
        app:srcCompat="@mipmap/quevedo_round" />

    <Button
        android:id="@+id/buttonQuedate"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="50dp"
        android:textSize="20dp"
        android:layout_width="149dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:layout_columnSpan="2"
        android:layout_marginBottom="100dp"
        android:text="GOD IS QUEEEDATE" />

    <ImageButton
        android:layout_columnSpan="3"
        android:layout_gravity="right"
        android:id="@+id/arrowGrid"
        android:layout_width="169dp"
        android:layout_height="153dp"
        android:layout_marginEnd="12dp"
        android:backgroundTint="@color/white"
        android:scaleType="fitCenter"
        android:src="@mipmap/flecha" />

</GridLayout>