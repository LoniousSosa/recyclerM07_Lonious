<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FrameLayoutLonious">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="50dp"
        android:text="FrameLayout-Lonious"
        android:textSize="40dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:text="A RECICLAR MAMON"
        android:textSize="18dp"
        android:id="@+id/reciclerButton"
        />

    <Button
        android:id="@+id/button_frame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="QUEEEEEDATE"
        android:layout_marginLeft="145dp"
        android:layout_marginTop="420dp"/>

    <ImageButton
        android:id="@+id/imageView"
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:layout_marginLeft="105dp"
        android:layout_marginTop="200dp"
        android:scaleType="fitCenter"
        android:src="@mipmap/quevedo"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/botonIntentExt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="To Button extended"
        android:layout_marginTop="550dp"/>
    <Button
        android:id="@+id/formIntentExt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="To Form "
        android:layout_marginTop="480dp"/>

    <ImageButton
        android:id="@+id/arrowFrame"
        android:layout_width="139dp"
        android:layout_height="133dp"
        android:layout_columnSpan="2"
        android:layout_gravity="right"
        android:layout_marginTop="470dp"
        android:layout_marginEnd="0dp"
        android:backgroundTint="@color/white"
        android:scaleType="fitCenter"
        android:src="@mipmap/flecha"
        tools:ignore="SpeakableTextPresentCheck" />
</FrameLayout>