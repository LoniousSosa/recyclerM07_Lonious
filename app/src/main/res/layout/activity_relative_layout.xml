<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RelativeLayout">

    <TextView
        android:id="@+id/relativeTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="RELATIVE LAYOUT"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp"
        android:textAlignment="center"
        android:textSize="40dp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/relativeImage"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_below="@+id/relativeTitle"
        android:layout_marginTop="75dp"
        android:backgroundTint="@color/white"
        android:scaleType="fitCenter"
        android:src="@mipmap/lucian_foreground"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/forgiveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeImage"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="53dp"
        android:text="FORGIVE"
        android:textSize="20dp" />

    <Button
        android:id="@+id/shootButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="264dp"
        android:layout_marginBottom="32dp"
        android:text="SHOOT"
        android:textSize="20dp" />

    <ImageButton
        android:id="@+id/arrowRelative"
        android:layout_width="210dp"
        android:layout_height="150dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="@color/white"
        android:scaleType="fitCenter"
        android:src="@mipmap/flecha"
        tools:ignore="SpeakableTextPresentCheck" />

</RelativeLayout>