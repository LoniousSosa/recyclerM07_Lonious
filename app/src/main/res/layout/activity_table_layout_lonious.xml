<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TableLayoutLonious">
    <TableRow>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="60dp"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="60dp"
            android:text="Tabla Temtem"
            android:textSize="40dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </TableRow>
    <TableRow android:layout_marginTop="20dp">
        <ImageButton
            android:layout_marginLeft="50dp"
            android:scaleType="fitCenter"
            android:id="@+id/tabla"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:src="@mipmap/tabla"/>
    </TableRow>
    <TableRow android:layout_marginTop="40dp">
        <Button
            android:layout_marginLeft="70dp"
            android:id="@+id/temtemButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Temtem Mejor que Pokemon" />
    </TableRow>
    <TableRow>
        <ImageButton
            android:id="@+id/arrowTable"
            android:layout_marginLeft="200dp"
            android:layout_width="149dp"
            android:layout_height="133dp"
            android:layout_marginBottom="10dp"
            android:backgroundTint="@color/white"
            android:scaleType="fitCenter"
            android:src="@mipmap/flecha" />
    </TableRow>
</TableLayout>